<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/simple_alert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Simple Alert Dialog"/>

    <Button
        android:id="@+id/list_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show List Dialog"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/single_choice_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Single Choice Dialog"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/multiple_choice_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Multiple Choice Dialog"
        android:layout_marginTop="16dp"/>

</LinearLayout>